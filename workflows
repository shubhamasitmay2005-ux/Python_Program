name: CI Pipeline

# When to run
on:
  push:
    branches: [ "main" ]
  pull_request:
    branches: [ "main" ]

jobs:
  build-and-test:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout code
      uses: actions/checkout@v4

    - name: Set up Node.js (example)
      uses: actions/setup-node@v4
      with:
        node-version: '18'       # change to your runtime

    - name: Install dependencies
      run: npm install         # change as per your project

    - name: Run tests
      run: npm test            # change to your test command
